@page
@model DriverRewards.Pages.Admin.CreateSponsorModel
@{
    ViewData["Title"] = "Create Sponsor";
}

<h1>Create Sponsor</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Sponsor.Name" class="control-label"></label>
                <input asp-for="Sponsor.Name" class="form-control" />
                <span asp-validation-for="Sponsor.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sponsor.Email" class="control-label"></label>
                <input asp-for="Sponsor.Email" class="form-control" />
                <span asp-validation-for="Sponsor.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sponsor.Phone" class="control-label"></label>
                <input asp-for="Sponsor.Phone" class="form-control" />
                <span asp-validation-for="Sponsor.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Password</label>
                <input asp-for="Sponsor.PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="Sponsor.PasswordHash" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="/Admin/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
