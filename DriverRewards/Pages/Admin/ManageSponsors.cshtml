@page
@model DriverRewards.Pages.Admin.ManageSponsorsModel
@{
    ViewData["Title"] = "Manage Sponsors";
}

<h1>Manage Sponsors</h1>

<p>
    <a asp-page="CreateSponsor" class="btn btn-success">Create New Sponsor</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sponsors)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.SponsorId" onsubmit="return confirm('Are you sure you want to delete this sponsor?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>