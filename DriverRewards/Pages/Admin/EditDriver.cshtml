@page "{id:int}"
@model DriverRewards.Pages.Admin.EditDriverModel
@{
    ViewData["Title"] = "Edit Driver";
}

<div class="row g-4">
    <div class="col-12">
        <h1 class="h3 mb-1">Edit Driver</h1>
        <p class="text-muted mb-0">Update driver account information.</p>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="DriverId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="FirstName"></label>
                            <input class="form-control" asp-for="FirstName" />
                            <span class="text-danger small" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="LastName"></label>
                            <input class="form-control" asp-for="LastName" />
                            <span class="text-danger small" asp-validation-for="LastName"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Username"></label>
                        <input class="form-control" asp-for="Username" />
                        <span class="text-danger small" asp-validation-for="Username"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Sponsor"></label>
                        <input class="form-control" asp-for="Sponsor" />
                        <span class="text-danger small" asp-validation-for="Sponsor"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="Phone"></label>
                            <input class="form-control" asp-for="Phone" />
                            <span class="text-danger small" asp-validation-for="Phone"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" asp-for="FedexId"></label>
                            <input class="form-control" asp-for="FedexId" />
                            <span class="text-danger small" asp-validation-for="FedexId"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Points"></label>
                        <input class="form-control" asp-for="Points" />
                        <span class="text-danger small" asp-validation-for="Points"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a class="btn btn-outline-secondary ms-2" asp-page="/Admin/Dashboard">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
