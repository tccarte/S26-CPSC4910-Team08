<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriverRewards</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DriverRewards.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="dr-nav">
            <div class="dr-nav-inner">
                <a class="dr-logo dr-nav-item" asp-area="" asp-page="/Index">Driver Rewards</a>

                <a class="dr-link dr-link-plain dr-nav-item" asp-area="" asp-page="/Index">Home Page</a>
                <a class="dr-link dr-link-plain dr-nav-item" asp-area="" asp-page="/Admin/ManageSponsors">Manage Sponsors</a>

                <form class="dr-search dr-search-wide dr-nav-item" method="get" asp-page="/Index">
                    <input class="dr-search-input" type="search" name="q" placeholder="Search DriverRewards" aria-label="Search" />
                    <button class="dr-search-btn" type="submit">Search</button>
                </form>

                <div class="dr-actions">
                    <a class="dr-link dr-link-plain dr-nav-item" asp-area="" asp-page="/Login">Account &amp; Login</a>
                    <a class="dr-link dr-link-plain dr-nav-item dr-link-dark" href="#">Returns &amp; Orders</a>
                    <a class="dr-link dr-link-plain dr-nav-item dr-link-dark" href="#">Cart</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - DriverRewards - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
