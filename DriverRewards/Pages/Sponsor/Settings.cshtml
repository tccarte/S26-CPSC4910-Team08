@page
@model DriverRewards.Pages.Sponsor.SettingsModel
@{
    ViewData["Title"] = "Sponsor Settings";
}

<div class="row g-4">
    <div class="col-12">
        <h1 class="h3 mb-1">Sponsor Settings</h1>
        <p class="text-muted mb-0">Manage your sponsor account.</p>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="h5">Account Info</h2>
                <div class="mb-2">
                    <div class="text-muted small">Name</div>
                    <div class="fw-semibold">@Model.SponsorName</div>
                </div>
                <div class="mb-2">
                    <div class="text-muted small">Email</div>
                    <div>@Model.Email</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <h2 class="h5 text-danger">Delete Account</h2>
                <p class="text-muted small">This action is permanent and cannot be undone. All your data will be deleted.</p>
                <form method="post" asp-page-handler="DeleteAccount" onsubmit="return confirm('Are you sure you want to delete your sponsor account? This action cannot be undone.');">
                    <button type="submit" class="btn btn-danger">Delete My Account</button>
                </form>
            </div>
        </div>
    </div>
</div>
