@page
@model DriverRewards.Pages.Sponsor.SignUpModel
@{
    ViewData["Title"] = "Sponsor Sign Up";
}

<div class="login-shell">
    <div class="login-card">
        <div class="login-header">
            <div class="login-kicker">DriverRewards</div>
            <h1 class="login-title">Sponsor Sign Up</h1>
            <p class="login-subtitle">Create a sponsor account to manage rewards.</p>
        </div>

        <form method="post" class="login-form">
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger small" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" autocomplete="email" />
                <span class="text-danger small" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" autocomplete="new-password" />
                <span class="text-danger small" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" autocomplete="new-password" />
                <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Phone"></label>
                <input class="form-control" asp-for="Phone" />
                <span class="text-danger small" asp-validation-for="Phone"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="SupportPhone"></label>
                <input class="form-control" asp-for="SupportPhone" />
                <span class="text-danger small" asp-validation-for="SupportPhone"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="HeadquartersAddress"></label>
                <input class="form-control" asp-for="HeadquartersAddress" />
                <span class="text-danger small" asp-validation-for="HeadquartersAddress"></span>
            </div>

            <div class="mb-4">
                <label class="form-label" asp-for="DollarToPointRatio"></label>
                <input class="form-control" asp-for="DollarToPointRatio" />
                <span class="text-danger small" asp-validation-for="DollarToPointRatio"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Sponsor Account</button>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-info mt-3" role="alert">
                @Model.StatusMessage
            </div>
        }

        <div class="login-footer">
            Already have an account? <a class="link-primary" asp-page="/Login">Log in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
