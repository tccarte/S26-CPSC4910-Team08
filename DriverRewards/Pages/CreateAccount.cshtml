@page
@model DriverRewards.Pages.CreateAccountModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="login-shell">
    <div class="login-card">
        <div class="login-header">
            <div class="login-kicker">DriverRewards</div>
            <h1 class="login-title">Create an account</h1>
            <p class="login-subtitle">Choose which type of account to create.</p>
        </div>

        <div class="d-grid gap-3">
            <a class="btn btn-primary" asp-page="/SignUp">Create Driver Account</a>
            <a class="btn btn-outline-primary" asp-page="/Sponsor/SignUp">Create Sponsor Account</a>
        </div>

        <div class="login-footer mt-4">
            Already have an account? <a class="link-primary" asp-page="/Login">Log in</a>
        </div>
    </div>
</div>
