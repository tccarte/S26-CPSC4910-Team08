@page
@model DriverRewards.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-shell">
    <div class="login-card">
        <div class="login-header">
            <div class="login-kicker">DriverRewards</div>
            <h1 class="login-title">Welcome back</h1>
            <p class="login-subtitle">Sign in to keep your rewards moving.</p>
        </div>

        <form method="post" class="login-form">
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" autocomplete="email" />
                <span class="text-danger small" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" autocomplete="current-password" />
                <span class="text-danger small" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Role"></label>
                <select class="form-select" asp-for="Role">
                    <option value="">Choose a role</option>
                    <option value="Driver">Driver</option>
                    <option value="Sponsor">Sponsor</option>
                    <option value="Admin">Admin</option>
                </select>
                <span class="text-danger small" asp-validation-for="Role"></span>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                <a class="link-secondary small" href="#">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">Log in</button>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-info mt-3" role="alert">
                @Model.StatusMessage
            </div>
        }

        <div class="login-footer">
            New here? <a class="link-primary" asp-page="/SignUp">Create an account</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
